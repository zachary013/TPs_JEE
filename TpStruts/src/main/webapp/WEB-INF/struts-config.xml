<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "WEB-INF/dtds/struts-config_1_1.dtd">

<struts-config>
    <form-beans>
        <form-bean name="userinputForm" type="beans.UserinputForm" />
    </form-beans>

    <action-mappings>
        <action
                attribute="userinputForm"
                name="userinputForm"
                path="/userinput"
                scope="request"
                input="/userinput.jsp"
                type="actions.UserinputAction">
            <forward name="succes" path="/useroutput.jsp" />
        </action>
    </action-mappings>

    <message-resources parameter="ApplicationResources" />
</struts-config>
